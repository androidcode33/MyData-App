<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#f499bbbe"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.16"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter your phone number"
        android:id="@+id/textView7"
        android:layout_weight="0.09"
        android:typeface="sans"

        android:textAlignment="center" />

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Airtel / Warid No:"
        android:id="@+id/a075"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#1eec0b" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="1"
            android:hint="075/070 7 123 456"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/button"
        />

    <TextView
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="you can reset you number in settings any time"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You can now Enjoy Google , Yahoo ,Facebok and find you way all around the Net."
        android:id="@+id/textView5"
        android:layout_weight="0.04"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textColor="#020301"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Use Magic Numbers to generate  Doubled Working Data Bundles for Free"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You can also share Data"
        android:id="@+id/textView8"
        android:layout_weight="0.16"
        android:textAlignment="center"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Terms and conditions observed"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp" />


</LinearLayout>